@page
@model WebCinemaApp.Pages.CreateCinema

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Введите название</label>
                <input asp-for="Cinema" class="form-control" />
                <span asp-validation-for="Cinema" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br/>
    <a asp-page="Index" class="btn btn-secondary">На главную</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}